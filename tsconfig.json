{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  }
}